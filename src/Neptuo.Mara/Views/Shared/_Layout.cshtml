@helper MenuItem(string text, string subtext, string icon, string url, bool isExactUrlMatched = false)
{
    <li class="@Request.ActiveCssClass(url, isExactUrlMatched)">
        <a href="@Request.ResolveUrl(url)">
            <div class="maintext">
                @text
                <span class="glyphicon glyphicon-@icon"></span>
            </div>
            <div class="subtext">@subtext</div>
        </a>
    </li>
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no">

    <title>@((ViewBag.Title != null ? ViewBag.Title + " - " : "") + "Marek Fišera")</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/web.min.css" rel="stylesheet" />
</head>
<body>

    <nav class="navbar navbar-fixed-top" role="navigation">
        <div class="container">
            <button class="navbar-toggle">
                <span class="glyphicon glyphicon-menu-hamburger"></span>
            </button>

            <div class="my-name">
                <img src="~/Content/Images/mnau2_sq.jpg" alt="Marek Fišera - icon" />
                <div class="content">
                    Marek Fišera
                </div>
                <div class="overlay"></div>
            </div>

            <ul class="right">
                @MenuItem("Me", "My developer's life", "education", "~/", true)
                @MenuItem("Books", "Those I liked or don't", "book", "~/books")
            </ul>
        </div>
    </nav>

    <div class="body">
        <div class="intro">
            <div class="container intro-content">
                @*<img src="~/Content/Images/mnau2_sq.jpg" alt="Marek Fišera - icon" style="display: block; margin-top: -100px; z-index: 2000; position: relative;" />*@

                <h1>My name is Marek Fišera</h1>
                <p>
                    I am a freelancer (currently available for hire). <br />
                    My specialization is Javascript and C#. <br />
                    My passion is architecture, naming and structuring code.
                </p>
            </div>
        </div>
        <div class="container">
            @RenderBody()
        </div>
    </div>

    <footer>
        <div class="container">
            <div class="left">
                <span><a target="_blank" href="http://mara.neptuo.com">Marek Fišera</a> &copy; 2016</span>
                @RenderSection("FooterLeft", false)
            </div>
            <div class="right">
                @RenderSection("FooterRight", false)
            </div>
            <div class="center">
                @RenderSection("FooterCenter", false)
            </div>
            <div class="clear"></div>
        </div>
    </footer>

</body>
</html>
